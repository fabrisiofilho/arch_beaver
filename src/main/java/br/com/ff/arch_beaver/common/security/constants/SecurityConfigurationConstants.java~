package br.com.senai.credenciado.common.security.constants;

import lombok.AccessLevel;
import lombok.NoArgsConstructor;

@NoArgsConstructor(access = AccessLevel.PRIVATE)
public final class SecurityConfigurationConstants {

    private static final String[] PUBLIC_MATCHERS_URL_IGNORE = {
        "/swagger-ui/**",
        "/v3/api-docs/swagger-config",
        "/v3/api-docs",
        "/actuator/**",
        "/download/**",
        "/health/**",
        "/",
    };

    public static String[] getPublicMatchersUrlIgnore() {
        return PUBLIC_MATCHERS_URL_IGNORE;
    }
}
